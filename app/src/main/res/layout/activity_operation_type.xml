<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"

        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/levelInfoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:text="Level 1"
                android:textColor="#FA000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Select Type"
                android:textColor="#58857e"
                android:textSize="50sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/opTypeButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/mybutton"
                android:text="  Addition  "
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/opTypeButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/mybutton"
                android:text="  Subtraction  "
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/opTypeButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/mybutton"
                android:text="  Multiplication  "
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/opTypeButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/mybutton"
                android:text="  Division  "
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/opTypeButtonTables"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/mybutton"
                android:text="  Tabels "
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/opTypeButtonSq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/mybutton"
                android:text="  Square  "
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/opTypeButtonSqrt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/mybutton"
                android:text="  Square Root  "
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="36sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>